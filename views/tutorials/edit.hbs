<div class="container container-primary">
    <div class="row">
        <h3 style="text-align: center">Edit {{tutorial.name}}</h3>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/tutorials/{{tutorial._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="tutorial[name]" value="{{tutorial.name}}">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="YouTube ID" name="tutorial[videoID]" value="{{tutorial.videoID}}">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="tutorial[thumbnail]" value="{{tutorial.thumbnail}}">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="tutorial[description]" value="{{tutorial.description}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/tutorials/all" class="pull-right">Go back</a>

        </div>


    </div>
</div>