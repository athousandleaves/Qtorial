<div class="container container-primary">
    <div class="row text-center padder" id="recently"><h2>Browse by topic</h2></div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        {{#each topics}}
           <div class="col-lg-3 col-md-4">
               <a href="/topics/{{this._id}}">
               <div class="thumbnail spacey logos">
                   <img class="topic-image" src="{{this.image}}">
                   <div class="caption">
                       <h3>{{this.name}}</h3>
                   </div>
               </div>
                 </a>
           </div>
        {{/each}}
    </div>   
</div>