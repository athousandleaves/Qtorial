<div class="container">
    <div class="row spacey padder">
        <h3 style="text-align: center">
             Add New Comment to <br>
             <u>{{{tutorial.name}}}</u>
        </h3>
        <div style="width: 30%; margin: 30px auto;">
                <form action="/tutorials/{{{tutorial._id}}}/comments" method="POST">
                    <div class="form-group">
                       <input class="form-control input-lg" type="text" placeholder="Type comment here." name="comment[text]">
                    </div> 
                    <div class="form-group">
                       <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                    </div>
                </form>
                        <a href="/tutorials/{{{tutorial._id}}}/" class="pull-right">Go back</a>

        </div>
     </div>
</div>