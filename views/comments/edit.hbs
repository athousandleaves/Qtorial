<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/tutorials/{{tutorial_id}}/comments/{{comment._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="{{comment.text}}" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/tutorials/{{tutorial_id}}" class="pull-right">Go back</a>

        </div>


    </div>

</div>